@inherits MudDialogInstance

<MudDialog>
<DialogContent>
    <MudText Typo="Typo.h6">@ContentText</MudText>
</DialogContent>
<DialogActions>
    <MudButton OnClick="() => MudDialog.Cancel()" Color="Color.Default">Anulează</MudButton>
    <MudButton OnClick="() => MudDialog.Close(DialogResult.Ok(true))" Color="Color.Error">Șterge</MudButton>
</DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    [Parameter] public string ContentText { get; set; }
}
