@page "/about"
@using System.Globalization
@inject IJSRuntime jSRuntime
@rendermode InteractiveServer

<PageTitle>WoodArtCons - About</PageTitle>

@if (!isloading && culture != null)
{
    var aboutUsTitle = culture switch { 
        "ru-RU" => "О компании WoodArtCons", 
        "en-US" => "About WoodArtCons", 
        "ro-RO" => "Despre WoodArtCons",
        _ => "Despre WoodArtCons"
    };
    var aboutUsDescription1 = culture switch { 
        "ru-RU" => "WoodArtCons - компания, специализирующаяся на производстве высококачественных изделий из дерева, от внутренней и наружной мебели до уличных скамеек, мусорных урн и игровых площадок.",
        "en-US" => "WoodArtCons is a company specialized in producing high-quality wooden items, from interior and exterior furniture to street benches, trash bins, and playgrounds.",
        "ro-RO" => "WoodArtCons este o companie specializată în producerea de obiecte din lemn de înaltă calitate, de la mobilier interior și exterior, la bănci stradale, coșuri de gunoi și terenuri de joacă.",
        _ => "WoodArtCons este o companie specializată în producerea de obiecte din lemn de înaltă calitate, de la mobilier interior și exterior, la bănci stradale, coșuri de gunoi și terenuri de joacă."
    };
    var aboutUsDescription2 = culture switch { 
        "ru-RU" => "Основанная в 2010 году, наша компания выросла из небольшой столярной мастерской в современную фабрику, обслуживающую клиентов по всей Молдове и за рубежом.",
        "en-US" => "Founded in 2010, our company has grown from a small carpentry workshop to a modern factory serving customers throughout Moldova and abroad.",
        "ro-RO" => "Fondată în 2010, compania noastră a crescut de la un mic atelier de tâmplărie la o fabrică modernă care servește clienți din întreaga Moldovă și din străinătate.",
        _ => "Fondată în 2010, compania noastră a crescut de la un mic atelier de tâmplărie la o fabrică modernă care servește clienți din întreaga Moldovă și din străinătate."
    };
    var ourValues = culture switch { 
        "ru-RU" => "Наши ценности", 
        "en-US" => "Our Values", 
        "ro-RO" => "Valorile noastre",
        _ => "Valorile noastre"
    };
    var quality = culture switch { 
        "ru-RU" => "Качество", 
        "en-US" => "Quality", 
        "ro-RO" => "Calitate",
        _ => "Calitate"
    };
    var qualityDesc = culture switch { 
        "ru-RU" => "Мы стремимся предлагать продукцию самого высокого качества, используя премиальное сырье и передовые производственные технологии.",
        "en-US" => "We are committed to offering products of the highest quality, using premium raw materials and advanced manufacturing techniques.",
        "ro-RO" => "Ne angajăm să oferim produse de cea mai înaltă calitate, folosind materii prime premium și tehnici de fabricație avansate.",
        _ => "Ne angajăm să oferim produse de cea mai înaltă calitate, folosind materii prime premium și tehnici de fabricație avansate."
    };
    var innovation = culture switch { 
        "ru-RU" => "Инновации", 
        "en-US" => "Innovation", 
        "ro-RO" => "Inovație",
        _ => "Inovație"
    };
    var innovationDesc = culture switch { 
        "ru-RU" => "Мы постоянно стремимся улучшать наши продукты и процессы, внедряя новые технологии и материалы.",
        "en-US" => "We constantly strive to improve our products and processes, adopting new technologies and materials.",
        "ro-RO" => "Căutăm constant să ne îmbunătățim produsele și procesele, adoptând noi tehnologii și materiale.",
        _ => "Căutăm constant să ne îmbunătățim produsele și procesele, adoptând noi tehnologii și materiale."
    };
    var sustainability = culture switch { 
        "ru-RU" => "Устойчивое развитие", 
        "en-US" => "Sustainability", 
        "ro-RO" => "Sustenabilitate",
        _ => "Sustenabilitate"
    };
    var sustainabilityDesc = culture switch { 
        "ru-RU" => "Мы преданы устойчивым бизнес-практикам, используя ответственные источники древесины.",
        "en-US" => "We are dedicated to sustainable business practices, using responsibly sourced wood.",
        "ro-RO" => "Suntem dedicați practicilor de afaceri durabile, utilizând surse responsabile de lemn.",
        _ => "Suntem dedicați practicilor de afaceri durabile, utilizând surse responsabile de lemn."
    };

    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
        <MudPaper Elevation="3" Class="pa-8" Style="border-radius: 16px;">
            <MudText Typo="Typo.h4" Class="mb-6" Style="font-weight: 600; color: #1f2937;">@aboutUsTitle</MudText>
            
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.body1" Class="mb-4" Style="line-height: 1.8;">@aboutUsDescription1</MudText>
                    <MudText Typo="Typo.body1" Class="mb-4" Style="line-height: 1.8;">@aboutUsDescription2</MudText>
                </MudItem>
                @* <MudItem xs="12" md="6">
                    <MudImage Src="Images/about-us.jpg" 
                             Alt="About WoodArtCons" 
                             Class="rounded-lg" 
                             Elevation="3" 
                             ObjectFit="ObjectFit.Cover" 
                             Style="width:100%; height:300px;"/>
                </MudItem> *@
                <MudPaper Elevation="0" Outlined="false" Width="50%">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d836.5170648752589!2d28.89371276967531!3d47.0334731122546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40c97d005833384f%3A0xac0a80a304a672ea!2sWoodArtCons%20SRL!5e1!3m2!1sro!2s!4v1715854920929!5m2!1sro!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </MudPaper>
            </MudGrid>
            
            <MudDivider Class="my-8" />

            <MudText Typo="Typo.h5" Class="mb-6" Style="font-weight: 600;">@ourValues</MudText>
            <MudGrid>
                <MudItem xs="12" sm="4">
                    <MudCard Elevation="2" Class="h-100 pa-4" Style="border-radius: 12px;">
                        <div class="d-flex align-center mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.HighQuality" Color="Color.Primary" Size="Size.Large" Class="mr-3" />
                            <MudText Typo="Typo.h6" Style="font-weight: 600;">@quality</MudText>
                        </div>
                        <MudText Typo="Typo.body2" Style="line-height: 1.6;">@qualityDesc</MudText>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" sm="4">
                    <MudCard Elevation="2" Class="h-100 pa-4" Style="border-radius: 12px;">
                        <div class="d-flex align-center mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Color="Color.Secondary" Size="Size.Large" Class="mr-3" />
                            <MudText Typo="Typo.h6" Style="font-weight: 600;">@innovation</MudText>
                        </div>
                        <MudText Typo="Typo.body2" Style="line-height: 1.6;">@innovationDesc</MudText>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" sm="4">
                    <MudCard Elevation="2" Class="h-100 pa-4" Style="border-radius: 12px;">
                        <div class="d-flex align-center mb-3">
                            <MudIcon Icon="@Icons.Material.Filled.Nature" Color="Color.Success" Size="Size.Large" Class="mr-3" />
                            <MudText Typo="Typo.h6" Style="font-weight: 600;">@sustainability</MudText>
                        </div>
                        <MudText Typo="Typo.body2" Style="line-height: 1.6;">@sustainabilityDesc</MudText>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </MudContainer>
}

@code {
    private bool isloading = true;
    private string culture;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            culture = await jSRuntime.InvokeAsync<string>("getLanguage");
            if (string.IsNullOrEmpty(culture))
            {
                culture = "ro-RO";
            }
            isloading = false;
            StateHasChanged();
        }
    }
}
